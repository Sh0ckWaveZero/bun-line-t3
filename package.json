    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^6.11.1",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "5.5.2",
    "typescript-eslint": "8.33.1"
  },
