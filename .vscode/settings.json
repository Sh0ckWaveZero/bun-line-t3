{
  "cSpell.words": [
    "adduser",
    "BUILDKIT",
    "bunx",
    "chartjs",
    "checkin",
    "CHOKIDAR",
    "configdb",
    "cpus",
    "crond",
    "crontabs",
    "cryptoicon",
    "digitaloceanspaces",
    "giga",
    "healthcheck",
    "INITDB",
    "localpass",
    "localtime",
    "mongosh",
    "pgrep",
    "Postback",
    "rgba",
    "safehost",
    "scdn",
    "tweakpane",
    "USEPOLLING",
    "vercel",
    "WATCHPACK",
    "yadom",
    "zoneinfo",
    "thai",
    "ThaiId",
    "ThaiID",
    "CheckDigit",
    "CheckDigitAlgorithm"
  ],
  "cSpell.languageSettings": [
    {
      "languageId": "*",
      "ignoreRegExpList": [
        "/[\\u0E00-\\u0E7F]+/g"
      ]
    }
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.enabledLanguageIds": [
    "typescript",
    "javascript",
    "typescriptreact",
    "javascriptreact",
    "json",
    "markdown",
    "text",
    "html",
    "css",
    "scss",
    "yaml",
    "yml"
  ],
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.preferTypeOnlyAutoImports": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.noSemicolons": "off",
  "typescript.preferences.quoteStyle": "double",
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript"
  },
  "typescript.tsc.autoDetect": "on",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "mcp": {
    "inputs": [
      {
        "type": "promptString",
        "id": "line_bot_channel_access_token",
        "description": "LINE Bot Channel Access Token",
        "password": true
      }
    ],
    "servers": {
      "line-bot": {
        "command": "bunx",
        "args": [
          "@line/line-bot-mcp-server"
        ],
        "env": {
          "CHANNEL_ACCESS_TOKEN": "${input:line_bot_channel_access_token}",
          "DESTINATION_USER_ID": "FILL_HERE"
        }
      }
    }
  },
  "postman.settings.dotenv-detection-notification-visibility": false
}